  <text x="2" y="10" dominant-baseline="middle" fill="{{ textColor }}">
    {{ name }}
  </text>
  <g width="390" height="10" transform="translate(100,5)">
    <rect width="250" height="10" rx="5" ry="5" fill="#f5f5f5" />
    <rect width="{{ progress }}" height="10" rx="5" ry="5" fill="{{ color }}" />
  </g>
  <text x="410" y="10" dominant-baseline="middle" text-anchor="end" fill="{{ textColor }}">
    {{ percent }}%
  </text>
</svg>